{
  "env": {
    "node": true,
    "es6": true
   },
   "rules": {
    "eqeqeq": 2,
    "max-len": [2, 80, 4],
    "vars-on-top": 2,
    "no-redeclare": 2,
    "no-loop-func": 2,
    "consistent-return": 2,
    "no-unused-vars": 2,
    "no-use-before-define": 2,
    "no-undef": 2,
    "callback-return": 2,
    "global-require": 2,
    "handle-callback-err": 2,
    "no-path-concat": 2,
    "no-process-exit": 2
  }
}
